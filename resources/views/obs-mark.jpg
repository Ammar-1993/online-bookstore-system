    <path d="M240 112
             C240 96 208 88 176 96
             L176 220
             C208 212 240 220 240 236
             Z"
          fill="white" stroke="url(#g2)" stroke-width="6"/>
    <!-- Spine -->
    <rect x="153" y="92" width="14" height="140" rx="7" fill="url(#g1)"/>
    <!-- Bookmark ribbon -->
    <path d="M160 196 L176 240 L160 232 L144 240 Z" fill="#10B981"/>
  </g>

  <!-- Subtle online signal -->
  <g stroke="url(#g1)" stroke-width="6" fill="none" stroke-linecap="round" opacity="0.9">
    <path d="M230 70 A95 95 0 0 1 280 120"/>
    <path d="M245 60 A110 110 0 0 1 292 107" opacity="0.6"/>
    <path d="M258 53 A124 124 0 0 1 302 97" opacity="0.35"/>
